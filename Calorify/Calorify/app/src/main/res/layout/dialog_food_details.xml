<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/surface">

    <TextView
        android:id="@+id/foodNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition per 100g"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/caloriesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔥 Calories: 0 kcal per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/proteinText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥩 Protein: 0g per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/carbsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍞 Carbohydrates: 0g per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/fatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧈 Fat: 0g per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/fiberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌾 Fiber: 0g per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/sugarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍯 Sugar: 0g per 100g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:maxLines="3"
        android:ellipsize="end" />

</LinearLayout>
